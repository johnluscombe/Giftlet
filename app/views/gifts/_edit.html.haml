%tr#edit_gift
  %td
    = f.text_field :name, class: 'form-control form-control-sm edit-gift-name', placeholder: 'Name', required: true
    = f.text_field :url, class: 'form-control form-control-sm edit-gift-url', placeholder: 'URL (optional)'
    = f.text_area :description, class: 'form-control form-control-sm edit-gift-description', placeholder: 'Description (optional)'
  %td.edit-gift-container{ colspan: '2' }
    = f.text_field :price_as_dollars, class: 'form-control form-control-sm edit-gift-price', placeholder: 'Price'
    = link_to 'DELETE', gift_path(gift), method: :delete, class: 'btn btn-outline-danger btn-sm edit-gift-delete',
      data: { confirm: 'Are you sure you want to delete this gift?' }