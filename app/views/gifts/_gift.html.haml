- if @user == current_user and params[:render_edit].to_i == gift.id
  = render partial: 'edit', locals: { f: f, gift: gift }
- else
  %tr[gift]
    %td
      - unless gift.url.blank?
        = link_to gift.name, gift.full_url, target: '_blank'
      - else
        = gift.name
      - unless gift.description.blank?
        %br
        = gift.description

    - if !gift.price.blank? and gift.price != 0.0
      %td.text-xs-right= number_to_currency(gift.price)
    - else
      %td

    - if @user != current_user
      - if gift.purchased
        - if gift.purchaser_id == current_user.id
          %td.text-xs-right
            = link_to gift_mark_as_unpurchased_path(gift), method: :patch, class: 'btn btn-success' do
              %i.fa.fa-check
              Purchased by You
        - elsif gift.purchaser_id
          %td.text-success.text-nowrap.text-xs-right
            %i.fa.fa-check
            Purchased by #{ gift.purchaser.first_name } #{ gift.purchaser.last_name }
        - else
          %td.text-success.text-xs-right
            %i.fa.fa-check
            Purchased

      - else
        %td.text-xs-right
          = link_to 'Mark as Purchased', gift_mark_as_purchased_path(gift), method: :patch, class: 'btn btn-secondary'

    - else
      %td.text-xs-right.edit-delete-icons
        = link_to user_gifts_path(@user, render_edit: gift.id) do
          %i.fa.fa-cog{ 'aria-hidden': 'true' }
        = link_to gift_path(gift), method: :delete, data: { confirm: 'Are you sure you want to delete this gift?' } do
          %i.fa.fa-trash{ 'aria-hidden': 'true' }