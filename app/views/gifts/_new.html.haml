%tr#new_gift
  %td
    = f.text_field :name, class: 'form-control form-control-sm new-gift-name', placeholder: 'Name', required: true
    = f.text_field :url, class: 'form-control form-control-sm new-gift-url', placeholder: 'URL (optional)'
    = f.text_area :description, class: 'form-control form-control-sm new-gift-description', placeholder: 'Description (optional)'
  %td{ colspan: '2' }= f.text_field :price_as_dollars, class: 'form-control form-control-sm', placeholder: 'Price'