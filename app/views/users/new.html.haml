%h1 New User
%br
= render 'shared/errors', object: @user

= form_for @user do |f|
  %table
    %col{ width: '200' }
    %col{ width: '200' }
    %tr
      %td.new_account= first_name_field(f)
      %td.new_account= last_name_field(f)
    %tr
      %td.new_account{ colspan: '2' }= username_field(f)
    %tr
      %td.new_account= user_password_field(f)
      %td.new_account= password_confirmation_field(f)
    %tr
      %td.new_account{ colspan: '2' }= site_passcode_field
  %br
  = submit_button(f, 'SUBMIT')
  = cancel_button