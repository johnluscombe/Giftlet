.modal.fade#editBasicInfoModal{ edit_basic_info_modal_options }
  .modal-dialog{ role: 'document' }
    .modal-content
      = form_for current_user, edit_basic_info_form_options do |f|
        .modal-header
          %button.close{ close_modal_button_options }
            %span{ 'aria-hidden': 'true' } &times;
          %h4.modal-title#editBasicInfoLabel Edit Basic Information
        .modal-body
          .row
            .col-xs-6= first_name_field(f)
            .col-xs-6= last_name_field(f)
          .row
            .col-xs-12= username_field(f)
        .modal-footer
          = user_submit_button(f, 'UPDATE')