= link_to family_user_gifts_path(@family, user), class: 'no-link-underline' do
  - if user == @user
    .card.user-card.selected-user
      = image_tag 'default_user.png', alt: 'User', class: 'user-picture'
      %span.user-name= user.fullname
  - else
    .card.user-card
      = image_tag 'default_user.png', alt: 'User', class: 'user-picture'
      %span.user-name= user.fullname